/**app.wxss**/
.container {
  display: flex ;
  flex-direction: column ;
  align-items: center ;
  width: 100%;
} 
.scrollWrap{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

}
.main{
  position: relative;
  width: 100%;
  margin: 0 auto ;
}
.postWrap{
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}
.overlay{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

}
.opacity0{
  opacity: 0;
}
.noevent{
  pointer-events: none;
}
.hidden{
  display: none;
}
.invisible{
  visibility: hidden ;
}
.z2{
  z-index: 2;
}
.z3{
  z-index: 3;
}
.z4{
  z-index: 4;
}
.z5{
  z-index: 5;
}
.z6{
  z-index: 6;
}
.z7{
  z-index: 7;
}
.z8{
  z-index: 8;
}
.z9{
  z-index: 9;
}
